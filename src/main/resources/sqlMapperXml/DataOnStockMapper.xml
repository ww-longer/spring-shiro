<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.main.mapper.DataOnStockMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.main.model.DataOnStock">
		<id column="id" property="id" />
		<result column="cust_id" property="custId" />
		<result column="ious" property="ious" />
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, cust_id AS custId, ious
    </sql>

	<!-- 查询所有上次借据清单数据列表 -->
	<select id="selectAllList" resultType="com.main.model.DataOnStock">
		SELECT
		<include refid="Base_Column_List" />
		FROM DATA_ON_STOCK
	</select>

	<!-- 清除所有当前表数据 -->
	<delete id="clearAllData">
		TRUNCATE TABLE DATA_ON_STOCK
	</delete>

</mapper>
